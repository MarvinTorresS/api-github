<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.api.github.ui.MainController"
            prefWidth="900" prefHeight="500">

    <!-- TOP: barra de búsqueda -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Usuario GitHub:"/>
            <TextField fx:id="txtUsername" prefWidth="200"/>
            <Button fx:id="btnBuscar" text="Buscar" onAction="#onBuscar"/>
            <Label fx:id="lblStatus" textFill="green"/>
        </HBox>
    </top>

    <!-- CENTER: datos del usuario + tabla + gráfico -->
    <center>
        <SplitPane dividerPositions="0.3">
            <!-- Panel izquierdo: datos del usuario -->
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <ImageView fx:id="imgAvatar" fitWidth="160" fitHeight="160" preserveRatio="true"/>
                <Label fx:id="lblName" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <Label fx:id="lblBio" wrapText="true"/>
                <Label fx:id="lblLocation"/>
                <Label fx:id="lblFollowers"/>
                <Label fx:id="lblCreated"/>
            </VBox>

            <!-- Panel derecho: tabla y gráfico -->
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <TableView fx:id="tblRepos" prefHeight="250">
                    <columns>
                        <TableColumn fx:id="colName" text="Nombre" prefWidth="200"/>
                        <TableColumn fx:id="colDesc" text="Lenguaje" prefWidth="150"/>
                    </columns>
                </TableView>

                <Label text="Lenguajes utilizados (%)" style="-fx-font-weight: bold;"/>
                <PieChart fx:id="chartLanguages" prefHeight="200"/>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
